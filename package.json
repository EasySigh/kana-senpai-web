{
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "dev": "npm-run-all --parallel start watch tail",
    "start": "serve docs",
    "tail": "npx tailwindcss -i src/style.css -o docs/style.css --watch"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^3.29.1",
    "rollup-plugin-livereload": "^2.0.5",
    "serve": "^14.2.1",
    "tailwindcss": "^3.3.3"
  }
}
